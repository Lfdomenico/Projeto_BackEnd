<%- include('../partials/header') %>

<% const isEdit = typeof aluno !== 'undefined' && aluno.id %>
<h1><%= isEdit ? 'Editar Aluno' : 'Novo Aluno' %></h1>

<form action="<%= isEdit ? '/admin/alunos/editar/' + aluno.id : '/admin/alunos/novo' %>" method="POST">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="mb-3">
                <label for="nome" class="form-label">Nome Completo</label>
                <input type="text" class="form-control" id="nome" name="nome" value="<%= isEdit ? aluno.nome : '' %>" required>
            </div>
            <div class="mb-3">
                <label for="login" class="form-label">Login (Email)</label>
                <input type="email" class="form-control" id="login" name="login" value="<%= isEdit ? aluno.login : '' %>" required>
            </div>
            <div class="mb-3">
                <label for="senha" class="form-label">Senha</label>
                <input type="password" class="form-control" id="senha" name="senha">
                <div class="form-text"><%= isEdit ? 'Deixe em branco para não alterar a senha.' : 'Senha obrigatória.' %></div>
            </div>
            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" id="ativo" name="ativo" <%= (isEdit && aluno.ativo) || !isEdit ? 'checked' : '' %>>
                <label class="form-check-label" for="ativo">
                    Usuário Ativo (pode fazer login)
                </label>
            </div>
            
            <a href="/admin/alunos" class="btn btn-secondary">Cancelar</a>
            <button type="submit" class="btn btn-primary"><%= isEdit ? 'Salvar Alterações' : 'Criar Aluno' %></button>
        </div>
    </div>
</form>

<%- include('../partials/footer') %>