<%- include('../partials/header') %>

<h1>Gerenciar Palavras-Chave</h1>

<div class="row">
    <div class="col-md-4">
        <div class="card shadow-sm">
            <div class="card-header">Nova Palavra-Chave</div>
            <div class="card-body">
                <form action="/admin/palavras-chave" method="POST">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome</label>
                        <input type="text" class="form-control" id="nome" name="nome" required>
                    </div>
                    <button type="submit" class="btn btn-success">Criar</button>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-8">
        <div class="card shadow-sm">
            <table class="table table-striped table-hover mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Nome</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <% if (typeof palavras !== 'undefined' && palavras.length > 0) { %>
                        <% palavras.forEach(pc => { %>
                            <tr>
                                <td><%= pc.nome %></td>
                                <td>
                                    <form action="/admin/palavras-chave/deletar/<%= pc._id %>" method="POST" onsubmit="return confirm('Tem certeza?');">
                                        <button type="submit" class="btn btn-sm btn-danger">Excluir</button>
                                    </form>
                                </td>
                            </tr>
                        <% }) %>
                    <% } else { %>
                        <tr>
                            <td colspan="2" class="text-center">Nenhuma palavra-chave cadastrada.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
</div>

<%- include('../partials/footer') %>